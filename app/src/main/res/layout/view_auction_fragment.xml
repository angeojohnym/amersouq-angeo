<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm"
    android:gravity="center_horizontal"
    tools:context="com.shopping.techxform.amersouq.activities.CreateAdvertisement.CreateAdpage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_30sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/person_pic_imgvw"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/immaculine" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/person_pic_imgvw"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/seller_name_td"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Victor T Thomas"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/_140sdp"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_td"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="29 Nov 2018"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="14:32 PM"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_10ssp"
                            android:visibility="gone" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/bg_auction"
                    android:gravity="center"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:text="Auction"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/cover_img"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_small_stroke"
                android:padding="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder" />

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/image_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/add_more_btn" />


            </LinearLayout>

            <TextView
                android:id="@+id/title_td"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Redux"
                android:textAllCaps="true"
                android:textColor="@color/text_blue_color"
                android:textSize="@dimen/_12ssp"
                />

            <TextView
                android:id="@+id/short_desc_td"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/dummy_short_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/full_desc_td"
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:text="@string/dummy_full_desc"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_9ssp"
               />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reserve_td"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/gradient_circular"
                    android:gravity="center"
                    android:text="Reserve \nRs.1600"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/base_td"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/bg_blue_circle"
                    android:gravity="center"
                    android:text="Base \nRs.1600"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Buy Now: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/buynow_td"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150 KWD"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/home_live_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_orange_grey"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/live_auction_td"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/live_td"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/live_auction"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/time_left_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/live_auction_td"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="bottom"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="6"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="bottom"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Hours"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="bottom"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="25"

                        android:textColor="@color/black"
                        android:textSize="@dimen/_25ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="bottom"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Minutes"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="bottom"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="56"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_25ssp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="bottom"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="Seconds"
                        android:textColor="@color/black" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/end_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/live_auction_td"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/end_time_td"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="Ends at:" />

                    <TextView
                        android:id="@+id/end_datetime_td"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_14ssp"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="21 Feb 2019  12:30:10" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/end_time_layout"
                    android:layout_margin="1dp"
                 >

                    <RelativeLayout
                        android:id="@+id/current_bid_layout"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bid_text_td"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Current Bid : "
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/bid_amt_td"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"

                            android:layout_toEndOf="@+id/bid_text_td"

                            android:text="--"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/bid_amt_td"
                            android:text="KD"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="#4fe0e7"
                            android:gravity="center"
                            android:text="Auction Fee : 1KD"
                            android:textColor="@color/black" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/top_three_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/current_bid_layout"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Top 3 Bid"

                            android:textColor="@color/black"

                            android:textSize="@dimen/_12ssp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:background="@color/light_grey"
                            android:gravity="center"
                            android:text="--"
                            android:id="@+id/bidone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:id="@+id/bidtwo"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:background="@color/light_grey"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:id="@+id/bidthree"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:background="@color/light_grey"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top_three_layout"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_20sdp">

                        <TextView
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="match_parent"
                            android:background="@color/light_grey"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="Enter your max. Possible Bid"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_8ssp"

                            android:textStyle="normal"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:background="@color/light_grey"
                            android:gravity="center"
                            android:text="600"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/bid_now_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:background="@drawable/rectangle_gradient"
                            android:gravity="center"
                            android:visibility="gone"
                            android:paddingStart="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/hammer_bid"
                                android:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:gravity="center"

                                android:paddingEnd="@dimen/_10sdp"
                                android:text="Bid Now"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/chat_seller_layout"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_effect_theme"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Edit Ad"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buynow_layout"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_effect_theme"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Disable"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
