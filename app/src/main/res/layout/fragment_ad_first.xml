<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm"
    android:gravity="center_horizontal"
    tools:context="com.shopping.techxform.amersouq.activities.CreateAdvertisement.CreateAdpage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_30sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_30sdp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:background="@drawable/bg_small_stroke"
                android:padding="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/laptop_image" />

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/add_more_btn"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/bg_small_stroke"
                    android:gravity="bottom"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/add_image_icon"
                    android:text="ADD MORE"
                    android:textColor="@color/white" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/image_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/add_more_btn" />


            </LinearLayout>


            <!--<android.support.design.widget.TextInputLayout-->
            <!--android:id="@+id/input_layout_language"-->
            <!--android:layout_width="@dimen/_240sdp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/_5sdp"-->
            <!--android:textColorHint="@color/black"-->
            <!--app:hintAnimationEnabled="true"-->
            <!--app:hintEnabled="true">-->

            <!--<EditText-->
            <!--android:id="@+id/input_language"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:backgroundTint="@color/black"-->
            <!--android:hint="@string/choose_language"-->
            <!--android:drawableEnd="@drawable/drop_down_icon"-->
            <!--android:maxLines="1"-->
            <!--android:textColor="@color/black"-->
            <!--android:textColorHint="@color/black"-->
            <!--android:textSize="@dimen/_12sdp" />-->
            <!--</android.support.design.widget.TextInputLayout>-->


         

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/language_spinner"
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone"
                    android:padding="@dimen/_1sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
           


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_adtitle"
                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColorHint="@color/black"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/input_adtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_grey"
                    android:drawableEnd="@drawable/edit_icon"
                    android:hint="@string/ad_title"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_addesc"

                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColorHint="@color/black"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/input_addesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_grey"
                    android:drawableEnd="@drawable/edit_icon"
                    android:hint="@string/short_desc"
                    android:maxLines="3"

                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </android.support.design.widget.TextInputLayout>

            <!--<com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner-->
            <!--android:id="@+id/spinner2"-->
            <!--android:layout_width="@dimen/_240sdp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:hint="MaterialBetterSpinner"-->
            <!--android:textColor="@color/black"-->
            <!--android:textColorHint="@color/black"-->
            <!--android:textSize="@dimen/_12ssp"-->

            <!--app:met_floatingLabel="normal" />-->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_fulldesc"

                android:layout_width="@dimen/_240sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColorHint="@color/black"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/input_fulldesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/dark_grey"

                    android:drawableEnd="@drawable/edit_icon"
                    android:hint="@string/ad_fulldesc"

                    android:maxLines="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_width="@dimen/_240sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:text="Boost Ad "/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/boost_ad_checkbox"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_240sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:text="Featured "/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/featuredcheck"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_240sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/visible_td"
                    android:paddingStart="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:text="Available to Guest User "/>

                <CheckBox
                    android:layout_width="match_parent"
                    android:id="@+id/visible_checkbox"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />

            </LinearLayout>












            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:layout_height="wrap_content">

            <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
                android:id="@+id/segmented2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="@dimen/_1sdp"
                segmentedgroup:sc_checked_text_color="@color/white"
                segmentedgroup:sc_corner_radius="0dp"
                segmentedgroup:sc_tint_color="@color/black">

                <RadioButton
                    android:id="@+id/auct_btn"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Auction   " />

                <RadioButton
                    android:id="@+id/fixed_btn"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Fixed Price   " />

                <RadioButton
                    android:id="@+id/classified_btn"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Classified   " />

            </info.hoang8f.android.segmented.SegmentedGroup>
            </RelativeLayout>
            <TextView
                android:layout_width="@dimen/_200sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:id="@+id/nxt_btn"
                android:text="Continue"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:background="@drawable/button_effect_theme"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_30sdp" />


        </LinearLayout>
    </ScrollView>
</RelativeLayout><!--app:ms_dropDownHintView="@layout/my_custom_dropdown_hint_item_layout"--><!--app:ms_hintView="@layout/my_custom_hint_item_layout"-->