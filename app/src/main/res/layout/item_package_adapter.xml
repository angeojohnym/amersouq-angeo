<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_4sdp"
        android:layout_margin="@dimen/_10sdp"
        app:contentPaddingTop="@dimen/_16sdp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingBottom="@dimen/_50sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/starter_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="STARTER"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/month_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$0/mo"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/save_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save $0 per month"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Advertisement"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_check"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Featured Advertisement"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_check"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Boosted Advertisement"
                        android:drawableStart="@drawable/ic_check"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vendor Profile"
                        android:drawableStart="@drawable/ic_check"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Create Auction"
                        android:textSize="16sp"
                        android:drawableStart="@drawable/ic_check"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"/>

                    <Button
                        android:id="@+id/submit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_effect_theme"
                        android:layout_gravity="bottom|center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>