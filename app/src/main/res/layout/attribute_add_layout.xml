<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_10sdp"
    android:background="@drawable/bgm_smal_new"
    android:orientation="vertical"
    android:layout_height="@dimen/_240sdp">


    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:layout_gravity="top"
        android:text="ADD ATTRIBUTE"
        android:textColor="@color/white"
        android:layout_height="@dimen/_30sdp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:padding="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:text="Attribute Name :"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:hint="Material , Colour .."
            android:textColor="@color/black"
            android:id="@+id/attribute_name_td"
            android:textSize="@dimen/_12ssp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:text="Attribute Type :"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:background="@drawable/orange_stroke_bg"
            android:layout_height="wrap_content">
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="match_parent"
            android:hint="Attribute Type"
            app:ms_dropdown_height="@dimen/_80sdp"
            android:id="@+id/attributes_type"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/button_effect_theme"
        android:textColor="@color/white"
        android:text="SUBMIT"
        android:id="@+id/submit_btn"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/_30sdp"
        />


</LinearLayout>