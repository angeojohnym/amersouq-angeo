<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_5sdp"
    android:gravity="center_vertical"
    android:id="@+id/full_layout"
    android:layout_height="@dimen/_120sdp">

    <ImageView
        android:id="@+id/full_img_ad"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/details_layout"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/full_img_ad"
        android:orientation="vertical">



        <!--<android.support.v7.widget.RecyclerView-->
            <!--android:layout_width="match_parent"-->
            <!--android:id="@+id/images_list_lay"-->
            <!--android:layout_marginBottom="@dimen/_10sdp"-->
            <!--android:layout_height="@dimen/_40sdp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:id="@+id/ad_title"
                android:textSize="@dimen/_12ssp"
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:text="Asus 8 gb i5 7th generation" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seller_layout"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller :"
                android:textColor="@color/red_btn_bg_color"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10ssp"
                android:id="@+id/ad_seller_name"
                android:textColor="@color/black"
                android:text="Victor Thomas , Kolkata"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 3656"
                android:textColor="@color/black"
                android:id="@+id/price_td"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/offer_price_td"
                android:textSize="@dimen/_8ssp"
                android:text="4300"/>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/offer_td"
            android:textSize="@dimen/_9ssp"
            android:textColor="@color/main_green_color"
            android:text="86% Offer"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            android:id="@+id/date_td"
            android:text="29 September 2018"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_9ssp"
            android:visibility="gone"
            android:text="14:32 PM"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ad_type_id"
            android:visibility="gone"
            android:background="@drawable/bg_classified"
            android:gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/adtype_td"
                android:textColor="@color/white"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:text="Classified"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:background="@color/gray_btn_bg_color"/>

</RelativeLayout>