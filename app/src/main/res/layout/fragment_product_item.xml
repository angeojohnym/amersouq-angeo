<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm"
    android:gravity="center_horizontal"
    tools:context="com.shopping.techxform.amersouq.activities.CreateAdvertisement.CreateAdpage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_30sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/person_pic_imgvw"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_6sdp"
                    android:src="@drawable/immaculine" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/person_pic_imgvw"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="@dimen/_14ssp"
                        android:layout_height="wrap_content"
                        android:text="Victor T Thomas"
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="29 Nov 2018"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="14:32 PM"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/_10ssp" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_small_stroke"
                android:padding="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/laptop_image" />

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/image_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/add_more_btn" />


            </LinearLayout>

            <TextView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Redux"
                android:textAllCaps="true"
                android:textColor="@color/text_blue_color"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/dummy_short_desc"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:text="@string/dummy_full_desc"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_9ssp" />

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="MRP :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="KWD 350"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Deal Price :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:text="KWD 320"
                    android:textColor="@color/dark_red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="You Save :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="KWD 30"
                    android:textColor="@color/dark_red"

                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:text="(8%)"
                    android:textColor="@color/dark_red"

                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity Available :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="15"
                    android:textColor="@color/dark_red"

                    android:textSize="@dimen/_11ssp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_280sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity  :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />

                <Button
                    android:layout_width="@dimen/_20sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@color/grey"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_20sdp"
                    android:text="-"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"

                    android:text="1"
                    android:textColor="@color/dark_red"

                    android:textSize="@dimen/_11ssp" />
                <Button
                    android:layout_width="@dimen/_20sdp"
                    android:background="@color/grey"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/_20sdp"
                    android:text="+"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/button_effect_theme"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone"
                    android:src="@drawable/call_icon_white"
                    android:layout_height="@dimen/_30sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="Buy Now"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:background="@drawable/button_effect_theme"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:visibility="gone"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/chat_icon_white"
                    android:layout_height="@dimen/_30sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"

                    android:text="Add to Cart"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
