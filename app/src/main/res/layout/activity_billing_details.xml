<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_search" />
<android.support.v7.widget.RecyclerView
    android:id="@+id/card_list_recycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/_10sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/_10sdp"
    app:cardBackgroundColor="@color/white">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Add Card Details"
               android:textStyle="bold"
               android:textSize="14sp"
               android:textColor="@color/black"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_5sdp"
               android:text="Enter credit card information. We will save this card so you can use it again later."
               android:textColor="@color/black"
               android:textSize="12sp"

               android:textStyle="bold" />
           <CheckBox
               android:id="@+id/checkBox"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="12sp"
               android:drawableTint="@color/black"
               android:layout_marginTop="@dimen/_5sdp"
               android:textColor="@color/black"
               android:text="Use name on account" />
           <EditText
               android:id="@+id/editText4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ems="10"
               android:textSize="14sp"
               android:layout_marginTop="@dimen/_5sdp"
               android:textColorHint="@color/grey"
               android:textColor="@color/black"
               android:inputType="textPersonName"
               android:hint="Name on card"/>
           <EditText
               android:id="@+id/editText5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ems="10"
               android:textSize="14sp"
               android:layout_marginTop="@dimen/_5sdp"
               android:textColorHint="@color/grey"
               android:hint="Card Number"
               android:textColor="@color/black"
               android:inputType="number" />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Expiry date"
               android:textStyle="bold"
               android:textSize="12sp"
               android:layout_marginTop="@dimen/_5sdp"
               android:textColor="@color/black"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/_5sdp">
               <AutoCompleteTextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="@dimen/_48sdp"
                   android:ems="10"
                   android:gravity="center"
                   android:layout_marginEnd="5dp"
                   android:background="@drawable/bg_border"
                   android:hint="MM"
                   android:textColorHint="@color/grey"
                   android:textColor="@color/black"
                   android:inputType="number" />
               <AutoCompleteTextView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:gravity="center"
                   android:layout_height="@dimen/_48sdp"
                   android:background="@drawable/bg_border"
                   android:ems="10"
                   android:textColorHint="@color/grey"
                   android:hint="YY"
                   android:inputType="number" />
           </LinearLayout>
           <Button
               android:id="@+id/button2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Add Your Card"
               android:textAllCaps="false"
               android:textStyle="bold"
               android:textSize="14sp"
               android:layout_marginTop="@dimen/_5sdp"
               android:background="@drawable/bg_button_theme_rectangle"
               android:textColor="@color/white"/>
       </LinearLayout>
   </ScrollView>


    </android.support.v7.widget.CardView>


</LinearLayout>