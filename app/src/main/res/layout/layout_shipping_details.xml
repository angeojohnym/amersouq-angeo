    <CheckBox
        android:id="@+id/pickup_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/black"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/tv_methods"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_settings" />


    <CheckBox
        android:id="@+id/courier_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:buttonTint="@color/black"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toEndOf="@+id/tv_methods"
        app:layout_constraintTop_toBottomOf="@+id/pickup_checkbox" />

    <TextView
        android:id="@+id/tv_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="Pickup From Store"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/pickup_checkbox"
        app:layout_constraintStart_toEndOf="@+id/pickup_checkbox"
        app:layout_constraintTop_toTopOf="@+id/pickup_checkbox" />

    <TextView
        android:id="@+id/tv_courier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Courier Delivery"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/courier_checkbox"
        app:layout_constraintStart_toEndOf="@+id/courier_checkbox"
        app:layout_constraintTop_toTopOf="@+id/courier_checkbox" />

    <TextView
        android:id="@+id/tv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Image Upload"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/tv_methods"
        app:layout_constraintTop_toBottomOf="@+id/courier_checkbox" />






</android.support.constraint.ConstraintLayout>