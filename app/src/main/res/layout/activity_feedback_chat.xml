<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".FeedbackChatActivity">
    
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/toolbar_search"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_below="@+id/header"
        android:background="@drawable/bg_theme"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Akhil K ASHOK"
                   android:textColor="@color/white"
                   android:textSize="20sp"
                   android:layout_marginTop="10dp"
                   android:textStyle="bold"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="abc@gmail.com"
                   android:textColor="@color/white"
                   android:textSize="16sp"
                   android:layout_marginTop="5dp"
                   android:gravity="center"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="9656454888"
                   android:textColor="@color/white"
                   android:textSize="16sp"
                   android:layout_marginTop="5dp"
                   android:gravity="center"/>
           </LinearLayout>
           <android.support.v7.widget.CardView
               android:id="@+id/card_lyt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardBackgroundColor="@color/white"
               app:cardCornerRadius="@dimen/_5sdp"
               android:layout_marginEnd="@dimen/_10sdp"
               android:layout_marginStart="@dimen/_10sdp"
               app:cardElevation="@dimen/_5sdp"
               android:layout_gravity="bottom"
               app:contentPadding="10dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textSize="16sp"
                       android:textColor="@color/black"
                       android:textStyle="bold"
                       android:text="Subject:TEST DEMO"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:textSize="12sp"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:textColor="@color/black"
                       android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries"/>
               </LinearLayout>
           </android.support.v7.widget.CardView>
       </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_lyt"
       android:layout_marginBottom="@dimen/_48sdp"
        android:layout_below="@+id/details">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chat_recycler"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginEnd="5dp"
                android:paddingStart="@dimen/_50sdp"
                android:textColor="@color/white"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Type your mssage"
                android:textColorHint="@color/grey"
                android:background="@drawable/bg_border"/>

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/bg_button_theme_rectangle"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>