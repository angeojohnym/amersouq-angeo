<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm"
    tools:context="com.shopping.techxform.amersouq.activities.Home.HomePage">


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_35sdp"
        android:layout_marginTop="?attr/actionBarSize" />



<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/ntb_horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:ntb_icon_size_fraction="0.4"
        app:ntb_inactive_color="@color/black"
        app:ntb_scaled="true"
        app:ntb_active_color="@color/white"
        app:ntb_title_size="@dimen/_8ssp"
        android:paddingBottom="@dimen/_5sdp"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_titled="true"
        app:ntb_swiped="true"
        app:ntb_badged="true"
        app:ntb_badge_gravity="bottom"
        app:ntb_bg_color="@color/white" />
    </FrameLayout>
</LinearLayout>

    <com.flipboard.bottomsheet.BottomSheetLayout
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </com.flipboard.bottomsheet.BottomSheetLayout>

</RelativeLayout>
