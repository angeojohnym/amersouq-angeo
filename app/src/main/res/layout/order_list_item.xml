<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/full_layout"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@drawable/bg_grey_stroke"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/vlight_grey"
        android:id="@+id/title_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/title_td"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:textSize="@dimen/_9ssp"
        android:layout_margin="@dimen/_5sdp"
        android:text="#23121212142"
        android:layout_height="@dimen/_20sdp" />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"

        android:src="@drawable/laptop_image"
        android:layout_below="@+id/title_lay"
        android:id="@+id/pdct_imagevw"
        android:layout_height="@dimen/_60sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_below="@+id/title_lay"
        android:layout_toEndOf="@+id/pdct_imagevw"

        android:layout_height="wrap_content">


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/black"
           android:textSize="@dimen/_10ssp"
           android:text="Redmi Note 6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_8ssp"
                android:text="Color :"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:text="Black"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_8ssp"
                android:text="Seller :"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:text="ABC Corporation"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_8ssp"
                android:text="Order Status.:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:text="Delivered"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>