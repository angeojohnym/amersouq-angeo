<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/full_img_ad"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_margin="@dimen/_5sdp"
        android:src="@drawable/placeholder" />

    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/full_img_ad"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_width="match_parent"-->
        <!--android:id="@+id/images_list_lay"-->
        <!--android:layout_marginBottom="@dimen/_10sdp"-->
        <!--android:layout_height="@dimen/_40sdp" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ad_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:text="Asus 8 gb i5 7th generation"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seller_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/short_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/red_btn_bg_color"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 3656"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/offer_price_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="4300"
                android:textSize="@dimen/_8ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_td"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 September 2018"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="14:32 PM"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/delete_imgvw"
        android:padding="@dimen/_2sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:tint="@color/dark_red"
        android:src="@drawable/close_icon" />

    <!--<ImageView-->
        <!--android:id="@+id/fav_imgvw"-->
        <!--android:layout_width="@dimen/_35sdp"-->
        <!--android:layout_height="@dimen/_35sdp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginTop="@dimen/_60sdp"-->
        <!--android:layout_marginRight="@dimen/_10sdp"-->
        <!--android:padding="@dimen/_7sdp"-->
        <!--android:src="@drawable/red_heart" />-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_btn_bg_color" />

</RelativeLayout>