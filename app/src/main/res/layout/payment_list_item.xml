<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/full_layout"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@drawable/bg_grey_stroke"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:id="@+id/title_td"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_5sdp"
        android:textSize="@dimen/_12ssp"
        android:text="Redmi Note 6 Pro"


        android:layout_height="@dimen/_30sdp" />
    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"

        android:src="@drawable/laptop_image"
        android:layout_below="@+id/title_td"
        android:id="@+id/pdct_imagevw"
        android:layout_height="@dimen/_60sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_below="@+id/title_td"
        android:layout_toEndOf="@+id/pdct_imagevw"

        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_8ssp"
                android:text="Order No.:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:text="#23121212142"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_8ssp"
                android:text="Order placed at:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:text="01/12/2018 12:11 PM"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_8ssp"
                android:text="Order delivered at:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:text="06/12/2018 10:25PM"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_8ssp"
                android:text="Order Status.:"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:text="Delivered"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>