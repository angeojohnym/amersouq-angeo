<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"

                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:id="@+id/product_name"
                    android:text="Konafa cake with creamy ricotta "
                    android:layout_toStartOf="@+id/kd_td"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"

                    android:textSize="@dimen/_10ssp"
                    android:id="@+id/short_desc_td"
                    android:textColor="@color/dark_grey"
                    android:layout_below="@+id/product_name"
                    tools:text="Konafa cake with creamy ricotta "
                    android:layout_toStartOf="@+id/kd_td"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingStart="@dimen/_10sdp"
                    android:layout_width="wrap_content"

                    android:layout_toStartOf="@+id/item_total_price"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:text="KD"
                    android:id="@+id/kd_td"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/_30sdp" />
                <TextView
                    android:layout_width="wrap_content"

                    android:paddingStart="@dimen/_10sdp"
                    android:text="430"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:layout_height="@dimen/_30sdp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:id="@+id/item_total_price"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"/>

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/dark_grey"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/bottom_layout"
                android:visibility="gone"
                android:paddingBottom="@dimen/_15sdp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:id="@+id/subtract_img"
                        android:src="@drawable/sub_img"
                        android:layout_height="@dimen/_25sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:id="@+id/quantity_td"
                        android:layout_height="@dimen/_30sdp"
                        android:minWidth="@dimen/_25sdp"/>
                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:id="@+id/add_img"
                        android:src="@drawable/add_img"
                        android:layout_height="@dimen/_25sdp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/delete_imgvw"
                    android:src="@drawable/delete_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"/>

            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>